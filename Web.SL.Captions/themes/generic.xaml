<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
  xmlns:local="clr-namespace:Microsoft.PlayerFramework.Captions"
  >
    <Style TargetType="local:CaptionsPanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CaptionsPanel">
                    <ItemsControl ItemsSource="{TemplateBinding ActiveCaptions}" VerticalAlignment="Bottom" Margin="0,0,0,45">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border HorizontalAlignment="Center" Background="#66000000">
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Text}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="16" FontSize="16" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
