<UserControl x:Class="Microsoft.PlayerFramework.Captions.CaptionsSelectionPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot">
        <ListBox x:Name="CaptionsList" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12" SelectionChanged="ListBox_SelectionChanged">
            <ListBoxItem Content="English" />
            <ListBoxItem Content="Spanish" />
            <ListBoxItem Content="German" />
            <ListBoxItem Content="Italian" />
            <ListBoxItem Content="Off" />
        </ListBox>
    </Grid>
</UserControl>
